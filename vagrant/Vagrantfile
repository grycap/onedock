Vagrant.configure(2) do |config|
  config.vm.box = "ubuntu/xenial64"
  config.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end

   config.vm.provision "shell", inline: <<-SHELL
     sudo apt-get update
     sudo apt-get install -y git
     git clone -b one5-vagrant  https://github.com/indigo-dc/onedock
     cd onedock
     sudo ./install/ubuntu/install-one
     sudo ./install/ubuntu/install-docker
     sudo ./install/ubuntu/install-registry
     sudo ./install/ubuntu/launch-registry
     sudo ./install/ubuntu/install-onedock-one5
     echo "Onedock installed, creating example image"
     cat > onedock.ds << EOF
         NAME=onedock
         DS_MAD=onedock
         TM_MAD=onedock
EOF
     echo "Creating onedock datastore"
     sudo -u oneadmin -s "onedatastore create onedock.ds"

     cat > ubuntu-docker.tmpl << EOF
     NAME="ubuntu"
     PATH=docker://ubuntu:latest
     TYPE=OS
     DESCRIPTION="Ubuntu"
EOF
     echo "Adding example ubuntu image"
     sudo -u oneadmin -s "oneimage create -d onedock ubuntu-docker.tmpl"

     cat > docker-private.net << EOF
     NAME=private
     BRIDGE=docker0
     NETWORK_ADDRESS = "TBC"
     NETWORK_MASK    = "255.255.0.0"
     DNS             = "TBC"
     GATEWAY         = "TBC"
     AR=[TYPE = "IP4", IP = "172.17.10.1", SIZE = "100" ]
EOF

     export DOCKER0IP=`/sbin/ifconfig docker0 | grep "inet addr" | awk -F : '{print $2}' | awk '{print $1}'`
     sed -i "s/TBC/$DOCKER0IP/g" docker-private.net
     echo "Creating onedock network"
     sudo -u oneadmin -s "onevnet create docker-private.net"

     echo "Creating onedock host"
     sudo -u oneadmin -s "onehost create $HOSTNAME -i onedock -v onedock -n dummy"
     echo "User and Password for oneadmin user:"
     cat /var/lib/one/.one/one_auth
   SHELL
end
